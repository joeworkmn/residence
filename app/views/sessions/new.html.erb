<div class='row'>
   <div class='span3 bg-gray-lighter'>
   <%= form_for :session, url: sessions_path do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :password %>
      <%= f.password_field :password %> <br />

      <%= f.submit "Sign in", class: "btn btn-primary" %>
   <% end %>
   </div>
</div>
