<%= simple_form_for staff do |f| %>

   <%= f.input :fname, label: "First Name" %>
   <%= f.input :lname, label: "Last Name" %>


   <%= f.input :email %>
   <%= f.input :phone_primary %>
   <%= f.input :phone_secondary %>

   <%= f.input :username, required: true %>
   <%= f.input :password, required: true %>
   <%= f.input :password_confirmation %>

   <%= f.input :roles, label: false do %>
      <%= f.collection_check_boxes :roles, Staff::ROLES, :to_s, :humanize do |b| %>
         <%= b.label { b.check_box + b.text } %>
      <% end %> 
   <% end %> <br />

   <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>
