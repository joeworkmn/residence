<table class='table table-striped table-hover table-bordered'>
   <tr>
      <th> Creator            </th>
      <th> Violations         </th>
      <th> Description        </th>
      <th> Total Fine         </th>
      <th> Create At          </th>
      <th> Updated At         </th>
      <th> Paid?              </th>
      <th class='unsortable'> </th>
   </tr>

   <% # TODO Make partial for individual tickets %>
   <% tickets.each do |t| %>
      <tr>
         <td> <%= t.staff.name                                        %> </td>
         <td> <%= t.violations.map { |v| v.name }.join(', ')          %> </td>
         <td> <%= truncate(t.description, length: 45, separator: ' ') %> </td>
         <td> <%= number_to_currency(t.total_fine)                    %> </td>
         <td> <%= t.created_at                                        %> </td>
         <td> <%= t.updated_at                                        %> </td>
         <td> <%= t.paid? ? "Yes" : "No"                              %> </td>
         <td> <%= link_to "details", t                                %> </td>
      </tr>
   <% end %>
</table>
