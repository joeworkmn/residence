<div class='row'>
   <div class='span5'>
      <b> Day Shift </b>
   </div>

   <div class='span5'>
      <b> Night Shift </b>
   </div>
</div>

<%= form_for @schedule do |f| %>

   <%= f.hidden_field :year, value: @schedule.year %>
   <%= f.hidden_field :month, value: @schedule.month %>

   <%= f.fields_for :entries do |entries_f| %>

      <% @days.each_with_index do |day, day_index| %>

         <div class='bg-gray-lighter row-with-margin'> <!-- Day Row -->

            <%= entries_f.fields_for "day-#{day_index}" do |dayf| %> <!-- Day Fields -->

               <% day_shift = day.select { |e| e.day_or_night == 'day' }.sort %>
               <% night_shift = day.select { |e| e.day_or_night == 'night' }.sort %>

               <div class='span5'> <!-- Day Shift Column -->
                  <% time_shift_partial_assigns = { day_fields: dayf, guards: @guards, time_shift: :day_shift, time_shift_recs: day_shift } %>
                  <%= render 'schedule_form_edit_time_shift', time_shift_partial_assigns %>
               </div> <!-- End Day Shift -->

               <div class='span5'> <!-- Night Shift Column -->
                  <% time_shift_partial_assigns[:time_shift]      = :night_shift %>
                  <% time_shift_partial_assigns[:time_shift_recs] = night_shift %>
                  <%= render 'schedule_form_edit_time_shift', time_shift_partial_assigns %>
               </div> <!-- End Night Shift -->

            <% end %> <!-- End Day Fields -->

         </div> <!-- End Day Row -->

      <% end %> <!-- End @days loop -->

   <% end %> <!-- End Entries Fields -->

   <%= f.submit "Submit" %>

<% end %>
