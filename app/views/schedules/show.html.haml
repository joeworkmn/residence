- provide(:title, "View Schedule")

#calendar

  %h2#month
    = link_to "<", @last_months_schedule if @last_months_schedule
    = "#{@schedule.month} #{@schedule.year}  Schedule"
    = link_to ">", @next_months_schedule if @next_months_schedule

  = calendar_for @entries, year: @schedule.year, month: Date::MONTHNAMES.index(@schedule.month) do |calendar|
    = calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday')
    - calendar.day do |date, entries|

      .day= date.day

      .schedule-for-day
        %p 
          %b Day Shift

        = schedule_for_day(entries, 'day') 

        %p 
          %b Night Shift

        = schedule_for_day(entries, 'night')
