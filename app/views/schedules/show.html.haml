- provide(:title, "View Schedule")

#calendar

  %h2#month
    = link_to "<", @last_months_schedule if @last_months_schedule
    = "#{@schedule.month} #{@schedule.year}  Schedule"
    = link_to ">", @next_months_schedule if @next_months_schedule

  // Form doesn't actually get posted. Submit button is actually a link to schedules#show.
  #choose-schedule
    = form_tag do
      = collection_select :not_used, :not_used, @schedules_for_same_year, :id, :month
      = link_to "View Schedule", schedule_path(@schedules_for_same_year.first), class: 'btn'

  = calendar_for @entries, year: @schedule.year, month: month_number(@schedule.month) do |calendar|
    = calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday')
    - calendar.day do |date, entries|
      .day= date.day
      .schedule-for-day

        .day-shift
          %p 
            %b Day Shift
          = schedule_for_day(entries, 'day') 

        .night-shift
          %p 
            %b Night Shift
          = schedule_for_day(entries, 'night')
