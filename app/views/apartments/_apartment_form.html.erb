<%= form_for apartment do |f| %>
   <%= render 'shared/error_messages', object: f.object %>

   <%= f.label :number %>
   <%= f.text_field :number %> <br /><br />

   <%= f.fields_for :status do |s| %>
      Occupied?
      <% #s.label "Occupied?" %> 
      <%= s.check_box :occupied %> <br /><br />

      <%= status_start_date_label(apartment, s) %>
      <%= s.text_field :status_start_date %> <br />

      <%= s.label :comment %>
      <%= s.text_area :comment %> <br />

   <% end %>

   <%= f.submit "Submit" %>

<% end %>
