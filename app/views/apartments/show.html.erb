<div class='row'>
   <div class='span4 bg-gray-lighter'>
      <p> <%= @apartment.number %> </p>
      <p> <%= @status %> since: <%= @apartment.status_start_date %> </p> 
      <p> <%= @apartment.comment %> </p>
      <p> <%= link_to "Edit", edit_apartment_path(@apartment) %>
   </div>
</div>


<div class='row-with-margin'>

    <!-- Column 1 -->
   <div class='span4'>
      <h3> Tenants </h3>
      <div class="accordion-heading">
         <a class="accordion-toggle" data-toggle="collapse" href="#new-tenant-form-accordion">
            Add new tenant
         </a>
      </div>
      <ul id='tenants'>
         <%= render partial: 'tenant', collection: @tenants, locals: { apartment: @apartment } %>
      </ul>
   </div> <!-- End Column 1 -->

    <!-- Column 2 -->
   <div class='span5'>
      <div id="new-tenant-form-accordion" class="accordion-body collapse">
         <div class="accordion-inner">
            <span id='tenant-form-message'></span>
            <div id='tenant-form' class='bg-gray-lighter'>
               <%= render 'tenants/tenant_form', apartment: @apartment, tenant: Tenant.new %>
            </div>
         </div>
      </div>
   </div> <!-- End Column 2 -->
</div>
